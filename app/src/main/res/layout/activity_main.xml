<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width= "match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/background_light"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:id="@+id/elaveEkran"
        android:layout_margin="10dp"
        android:enabled="false"
        android:gravity="bottom|right"
        android:paddingRight="10dp"
        android:text=""
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="30sp"
        android:textStyle="bold"

    />

    <EditText
        android:id="@+id/capekran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:enabled="false"
        android:gravity="bottom|right"
        android:hint="0"
        android:paddingRight="10dp"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/sil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="c"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/holo_orange_dark"
        />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/axirdan_sil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#x2B05;"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/holo_orange_dark"
            />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/faiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/holo_orange_dark"
            />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/bol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/holo_orange_dark"
            />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:layout_margin="10dp"
        android:background="@android:color/background_light"
        android:id="@+id/yeddi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@android:color/primary_text_light_nodisable"
        />
    <Button
        android:layout_margin="10dp"
        android:background="@android:color/background_light"
        android:id="@+id/sekkiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@android:color/primary_text_light_nodisable"
        />
    <Button
        android:layout_margin="10dp"
        android:background="@android:color/background_light"
        android:id="@+id/doqquz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@android:color/primary_text_light_nodisable"
        />
    <Button
        android:layout_margin="10dp"
        android:background="@android:color/background_light"
        android:id="@+id/vur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textAllCaps="false"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@android:color/holo_orange_dark"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/dord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/bes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/alti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/cix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/holo_orange_dark"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/bir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/iki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/uc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/holo_orange_dark"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/menfi_musbet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+/-"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />

        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/sifir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />

        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/vergul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light_nodisable"
            />

        <Button
            android:layout_margin="10dp"
            android:background="@android:color/background_light"
            android:id="@+id/beraber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@android:color/holo_orange_dark"
            />

    </LinearLayout>
</LinearLayout>